generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id_user      Int            @id @default(autoincrement())
  name_user    String
  email        String         @unique
  password     String
  name         String?
  photo        String?
  Post         Post[]
  Contribution Contribution[]
  Commentaire  Commentaire[]
}

model Post {
  id_post        Int            @id @default(autoincrement())
  title          String
  description    String
  photo          String
  categorie      String?
  desired_amount Float
  start_date     DateTime       @default(now())
  end_date       DateTime
  id_creator     Int
  creator        User?          @relation(fields: [id_creator], references: [id_user])
  Contribution   Contribution[]
  Commentaire    Commentaire[]
}

model Contribution {
  id_contribution   Int      @id @default(autoincrement())
  amount            Float
  date_contribution DateTime
  id_post           Int      @map("id_post")
  Post              Post?    @relation(fields: [id_post], references: [id_post])
  id_contributeur   Int      @map("id_contributeur")
  contributeur      User?    @relation(fields: [id_contributeur], references: [id_user])
  Payment           Payment?
}

model Payment {
  id_Payment      Int           @id @default(autoincrement())
  amount_paye     Float
  id_contribution Int           @unique
  contribution    Contribution? @relation(fields: [id_contribution], references: [id_contribution])
}

model Commentaire {
  id_commentaire Int      @id @default(autoincrement())
  id_post        Int
  id_creator     Int
  contenu        String
  date_creation  DateTime @default(now())
  Post           Post?    @relation(fields: [id_post], references: [id_post])
  creator        User?    @relation(fields: [id_creator], references: [id_user])
}
